# Server-side environment variables (keep this file secret)
# Copy file này thành .env và điền thông tin thật của bạn

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/login-google/callback

# JWT Configuration
JWT_SECRET=your_secret_key_here

# Frontend URL
FRONTEND_URL=http://localhost:3000

# MySQL Database Configuration
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password_here
MYSQL_DB=salesphoneDB

# Server Port
PORT=5000

# Email Configuration
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_app_password_here

# React App Google Client ID
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id_here

# SePay Configuration
SEPAY_API_KEY=your_sepay_api_key_here
SEPAY_SECRET_KEY=your_sepay_secret_key_here
SEPAY_BANK_CODE=970432
SEPAY_ACCOUNT_NUMBER=your_account_number_here
SEPAY_ACCOUNT_NAME=YOUR NAME

# GHN (Giao Hang Nhanh) Configuration - DEV Environment
GHN_TOKEN=your_ghn_token_here
GHN_SHOP_ID=your_shop_id_here
GHN_FROM_NAME=Your Store Name
GHN_FROM_PHONE=your_phone_here
GHN_FROM_ADDRESS=your_address_here
GHN_FROM_DISTRICT_ID=your_district_id_here
GHN_FROM_WARD_CODE=your_ward_code_here
BACKEND_URL=http://localhost:5000

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
